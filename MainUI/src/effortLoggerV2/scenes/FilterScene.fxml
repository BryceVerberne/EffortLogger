<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="effortLoggerV2.FilterController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Enter Activity Key Words:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <VBox alignment="TOP_CENTER">
               <children>
                  <TextField fx:id="filterTextField" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#addKeyWords" text="Submit Key Words">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#clearKeyWords" text="Clear">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="filterButton" alignment="CENTER" mnemonicParsing="false" text="Set Filters">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
         <HBox.margin>
            <Insets right="24.0" />
         </HBox.margin>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label text="Activity's Key Words">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <ListView fx:id="filterWordList" editable="true" prefHeight="125.0" />
         </children>
         <HBox.margin>
            <Insets left="24.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
